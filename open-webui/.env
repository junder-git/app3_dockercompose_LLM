# open-webui/.env - Open WebUI Service Configuration
# ===== SECURITY =====
WEBUI_SECRET_KEY=your-very-secret-key-change-this-in-production-make-it-long-and-random

# ===== OLLAMA CONNECTION =====
# Point to separate Ollama container
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_API_BASE_URL=http://ollama:11434
OLLAMA_HOST=ollama:11434

# Disable bundled Ollama service
ENABLE_OLLAMA_API=false

# ===== AUTHENTICATION & USER MANAGEMENT =====
WEBUI_AUTH=true
DEFAULT_USER_ROLE=user
ENABLE_SIGNUP=true
ENABLE_LOGIN_FORM=true

# Default admin user configuration
DEFAULT_USER_EMAIL=admin@example.com
DEFAULT_USER_NAME=Admin
DEFAULT_USER_PASSWORD=change-this-password

# ===== OPEN WEBUI CONFIGURATION =====
# Use internal DNS
WEBUI_URL=http://open-webui:8080
CORS_ALLOW_ORIGIN=http://open-webui:8080

# User Agent and Warnings
USER_AGENT=Open-WebUI/1.0 (ai.junder.uk)
LANGCHAIN_TRACING_V2=false

# ===== OPTIONAL API ENDPOINTS =====
# Uncomment and configure if using external APIs
# OPENAI_API_BASE_URL=https://api.openai.com/v1
# OPENAI_API_KEY=your-openai-key-here
# ANTHROPIC_API_KEY=your-anthropic-key-here

# ===== PERFORMANCE SETTINGS =====
# Request handling
WEBUI_SESSION_COOKIE_SAME_SITE=lax
WEBUI_SESSION_COOKIE_SECURE=false

# File upload limits
MAX_UPLOAD_SIZE=100MB
MAX_FILE_SIZE=25MB

# ===== FEATURE FLAGS =====
ENABLE_RAG_WEB_SEARCH=true
ENABLE_RAG_WEB_LOADER_SSL_VERIFICATION=true
RAG_WEB_SEARCH_ENGINE=duckduckgo

# Model management
ENABLE_MODEL_FILTER=true
MODEL_FILTER_ENABLED=true

# Chat features
ENABLE_CHAT_EXPORT=true
ENABLE_CHAT_DELETE=true